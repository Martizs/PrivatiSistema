<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.potato.privatisistema.Prisijungimas">

    <Button
        android:id="@+id/butPrisijungti"
        android:onClick="butPrisijungti"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="@string/BTextPrisijungti"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/butActRegistracija"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/stringSlaptazodis"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/butPrisijungti" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TextVSlaptazodis"
        android:layout_marginBottom="-1dp"
        app:layout_constraintBottom_toTopOf="@+id/stringSlaptazodis"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/stringSlaptazodis" />

    <EditText
        android:id="@+id/stringSlapyvardis"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nick"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/stringSlapyvardis"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/stringSlapyvardis" />

    <Button
        android:id="@+id/butActRegistracija"
        android:onClick="butRegistracija"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="@string/BTextRegistruotis"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="130dp" />

    <ProgressBar
        android:id="@+id/progressPrisijungt"
        style="?android:attr/progressBarStyle"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>
